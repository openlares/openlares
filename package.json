{
  "name": "openlares",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:clean": "rm -rf packages/app/.next && turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "size": "size-limit",
    "size:report": "size-limit --json",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@size-limit/preset-app": "^12.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^10.0.2",
    "http-proxy": "^1.18.1",
    "prettier": "^3.5.0",
    "size-limit": "^12.0.0",
    "turbo": "^2.8.11",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=22"
  },
  "size-limit": [
    {
      "path": "packages/app/.next/static/**/*.js",
      "limit": "500 kB",
      "name": "App JS bundle"
    }
  ]
}
